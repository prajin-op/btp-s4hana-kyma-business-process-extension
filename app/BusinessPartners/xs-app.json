{
	"welcomeFile": "webapp/index.html",
	"authenticationMethod": "route",
	"routes": [{
			"source": "^/sales/(.*)$",
			"destination": "srv-binding",
			"authenticationType": "xsuaa"
		},

		{
	      "source": "^/webapp/(.*)$",
	      "target": "$1",
	      "localDir": "webapp",
		  "authenticationType": "xsuaa"
	    }
	]
}