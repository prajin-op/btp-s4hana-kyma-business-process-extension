{
  "name": "kyma-cap-s4ems",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^4",
    "@sap/xb-msg-amqp-v100": "0.9.48",
    "express": "^4",
    "hdb": "^0.18.2",
    "postcode-validator": "^3.1.0",
    "passport": "^0.4.1",
    "@sap/xssec": "^2.2.3"
  },
  "devDependencies": {
    "sqlite3": "^5"
  },
  "scripts": {
    "start": "cds run"
  },
  "cds": {
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "db": {
        "kind": "sql",
        "model": [
          "db",
          "srv"
        ]
      },
      "messaging": {
        "kind": "enterprise-messaging-shared",
        "queue": {
          "name": "refapps/ccdemo/event/CAP/0001"
        }
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "credentials": {
          "destination": "s4h_demo",
          "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER"
        }
      }
    }
  }
}
